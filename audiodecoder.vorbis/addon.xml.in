<?xml version="1.0" encoding="UTF-8"?>
<addon
  id="audiodecoder.vorbis"
  version="1.1.0"
  name="Vorbis Audio Decoder"
  provider-name="spiff">
  <requires>
    <c-pluff version="0.1"/>
    <import addon="kodi.audiodecoder" version="1.0.0"/>
  </requires>
  <extension
    point="kodi.audiodecoder"
    extension=".ogg|.oggstream|.oga"
    mimetype="application/ogg|audio/ogg"
    tracks="true"
    library_@PLATFORM@="@LIBRARY_FILENAME@"/>
  <extension point="xbmc.addon.metadata">
    <summary lang="en">Vorbis Audio Decoder</summary>
    <description lang="en">Vorbis Audio Decoder</description>
    <platform>@PLATFORM@</platform>
  </extension>
</addon>
